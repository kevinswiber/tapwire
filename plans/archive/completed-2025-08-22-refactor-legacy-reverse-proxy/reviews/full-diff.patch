+    Http,
+    Stdio,
+}
+
+/// Configuration for creating upstream services
+#[derive(Debug, Clone)]
+pub struct UpstreamConfig {
+    pub url: String,
+    pub transport_type: UpstreamType,
+    pub timeout_ms: Option<u64>,
+    pub max_retries: Option<u32>,
+}
+
