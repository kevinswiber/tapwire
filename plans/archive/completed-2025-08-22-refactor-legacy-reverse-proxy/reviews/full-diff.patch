-
-    let status = response.status();
-    let headers = response.response.headers().clone();
-
-    // Collect the body
-    let body = response.into_body();
-    let bytes = body
-        .collect()
-        .await
-        .map_err(|e| {
-            ReverseProxyError::UpstreamConnectionFailed(format!(
-                "Failed to read response body: {e}"
